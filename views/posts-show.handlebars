<div class="row">
{{#each post}}
{{> post}}
<p><a href="/posts/{{{this._id}}}/edit">Edit</a></p>
<form class="favorite" data-id="{{this._id}}">
    <button><span>👍</span></button>
</form>
<p><form method="POST" action="/posts/{{{this._id}}}?_method=DELETE">
    <button type="submit">Delete</button>
{{/each}}

{{!-- show comment form --}}
{{!-- if theres a post, render comment form --}}
{{#if post}}
{{> comment-form}}
{{/if}}

<hr>
{{#each comments}}
{{> comment}}
{{/each}}
</div>